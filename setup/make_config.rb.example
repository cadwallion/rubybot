#Pownce module settings
Conf.create(:config_name => 'pownce_api_key', :config_value => '')
Conf.create(:config_name => 'pownce_api_secret', :config_value => '')

#Add user
user = User.create(:nickname => 'AdminNick', :admin => 1)
user.hosts.create(:hostname => 'i=admin@host.com')

#Add channels
Channel.create(:name => '#channel')
Channel.create(:name => '#anotherchannel')

